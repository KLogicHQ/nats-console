# NATS Console Production Environment Variables

# ==================== Database ====================
DATABASE_URL=postgresql://nats_console:your_secure_password@postgres:5432/nats_console
POSTGRES_USER=nats_console
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=nats_console

# ==================== Redis ====================
REDIS_URL=redis://redis:6379

# ==================== ClickHouse ====================
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_DATABASE=nats_console
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# ==================== NATS ====================
NATS_URL=nats://nats:4222

# ==================== JWT ====================
# IMPORTANT: Generate a strong secret for production
# Use: openssl rand -base64 64
JWT_SECRET=your_very_secure_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================== API ====================
API_URL=http://localhost:3001/api/v1
WS_URL=ws://localhost:3001/ws

# ==================== Logging ====================
LOG_LEVEL=info
